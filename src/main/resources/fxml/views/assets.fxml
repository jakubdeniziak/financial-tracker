<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.jakubdeniziak.financialtracker.ui.controller.view.AssetsViewController"
>

    <!-- TOP: Navigation -->
    <top>
        <fx:include source="../elements/navigation.fxml"/>
    </top>

    <!-- CENTER: Assets table -->
    <center>
        <TableView fx:id="assetTable">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name"/>
                <TableColumn fx:id="symbolColumn" text="Symbol"/>
                <TableColumn fx:id="categoryColumn" text="Category"/>
                <TableColumn fx:id="typeColumn" text="Type"/>
                <TableColumn fx:id="currencyColumn" text="Currency"/>
                <TableColumn fx:id="priceColumn" text="Asset price"/>
            </columns>
        </TableView>
    </center>

    <!-- BOTTOM: Action buttons -->
    <bottom>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button text="Add" onAction="#onAdd"/>
            <Button text="Edit" onAction="#onEdit"/>
            <Button text="Delete" onAction="#onDelete"/>
        </HBox>
    </bottom>

</BorderPane>
