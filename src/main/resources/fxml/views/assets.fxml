<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.jakubdeniziak.financialtracker.ui.controller.views.AssetsController"
>

    <!-- TOP: Navigation -->
    <top>
        <fx:include source="../elements/navigation.fxml"/>
    </top>

    <!-- CENTER: Assets table -->
    <center>
        <TableView fx:id="assetTable">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name"/>
                <TableColumn fx:id="symbolColumn" text="Symbol"/>
                <TableColumn fx:id="categoryColumn" text="Category"/>
                <TableColumn fx:id="typeColumn" text="Type"/>
                <TableColumn fx:id="currencyColumn" text="Currency"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
